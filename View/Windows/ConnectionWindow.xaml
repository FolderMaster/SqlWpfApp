<Window x:Class="View.Windows.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.Windows"
        xmlns:converters="clr-namespace:View.Converters"
        mc:Ignorable="d"
        Title="Connection" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <converters:StringToHeaderConverter x:Key="StringToHeaderConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label Content="{Binding Source={StaticResource ConnectionHeader},
                Converter={StaticResource StringToHeaderConverter}}"/>
            <ComboBox ItemsSource="{Binding Connections}"
                      SelectedItem="{Binding SelectedConnection}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Label Content="{Binding Server}"/>
                            <Label Content="{Binding DataBase}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Content="{Binding Source={StaticResource LoginHeader},
                Converter={StaticResource StringToHeaderConverter}}"/>
            <ComboBox ItemsSource="{Binding SelectedConnection.Authorizations}"
                      SelectedItem="{Binding SelectedAuthorization}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding User}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Content="{Binding Source={StaticResource PasswordHeader},
                Converter={StaticResource StringToHeaderConverter}}"/>
            <TextBox Text="{Binding SelectedAuthorization.Password}"/>
            <PasswordBox/>
            <Button Content="{StaticResource ConnectHeader}" HorizontalAlignment="Center"
                    Command="{Binding ConnectCommand}"/>
        </StackPanel>
    </Grid>
</Window>
